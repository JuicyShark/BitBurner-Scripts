/** @param {NS} ns **/
export async function main(ns) {
  let hostname = ns.args[0]
  let type = ns.args[1]
  ns.print(`starting hack from promise on ${hostname}`)
  switch(type){ 
      case "Weaken":  await ns.weaken(hostname); break;
      case "Grow": await ns.grow(hostname); break;
      case "Hack": await ns.hack(hostname); break;
      default: ns.print(`error choosing hackType on network: ${hostname}. type: ${type}`)
  }
}